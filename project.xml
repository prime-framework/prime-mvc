<project xmlns="http://www.inversoft.org/schemas/savant-1.5/project"
         name="prime-mvc"
         group="primeframework.org"
         version="1.0">

  <plugin group="plugins.savant.inversoft.org" name="ide" version="1.2"/>
  <plugin group="plugins.savant.inversoft.org" name="clean" version="1.1.1"/>
  <plugin group="plugins.savant.inversoft.org" name="java" version="1.2"/>
  <plugin group="plugins.savant.inversoft.org" name="testng" version="1.1.2"/>
  <plugin group="plugins.savant.inversoft.org" name="database" version="1.1.1"/>
  <plugin group="plugins.savant.inversoft.org" name="release-git" version="1.2"/>

  <!-- compile properties -->
  <property name="jdk.version" value="1.6"/>

  <release>
    <publication name="prime-mvc" type="jar" compatType="minor" file="target/jars/${project.name}-${project.version}.jar"/>
    <publication name="prime-mvc-test" type="jar" compatType="minor" file="target/jars/${project.name}-test-${project.version}.jar"/>
  </release>

  <dependencies>
    <artifact-group type="compile-only">
      <artifact group="inject.javax" name="inject-api" version="1.0"/>
      <artifact group="persistence.javax" name="persistence-api" version="2.0.1"/>
      <artifact group="servlet.javax" name="servlet-api" version="2.5"/>
      <artifact group="jsp.servlet.javax" name="jsp-api" version="2.0"/>

    </artifact-group>
    <artifact-group type="compile">
      <artifact group="asm.objectweb.org" name="asm" version="3.1"/>
      <artifact group="commons.apache.org" name="commons-configuration" version="1.4"/>
      <artifact group="commons.apache.org" name="commons-fileupload" version="1.2.1"/>
      <artifact group="commons.apache.org" name="commons-lang3" version="3.0.1"/>
      <artifact group="extensions.inject.google.com" name="guice-multibindings" version="3.0"/>
      <artifact group="freemarker.org" name="freemarker" version="2.3.16"/>
      <artifact group="inject.google.com" name="guice" version="3.0"/>
      <artifact group="joda.org" name="joda-time" version="2.0"/>
      <artifact group="primeframework.org" name="prime-mock" version="1.0-{integration}"/>
    </artifact-group>
    <artifact-group type="test-compile">
      <artifact group="easymock.org" name="easymock" version="3.1"/>
      <artifact group="testng.org" name="testng" version="5.11"/>
      <artifact group="primeframework.org" name="prime-mock" version="1.0-{integration}"/>
    </artifact-group>
  </dependencies>
</project>
